//- @mixin
include /components/fragments/button.pug
include /mixins/icons.pug
mixin howTo(list)
    ol.how-to
        each item in list 
            li.how-to__item
                img(src=`img/${item.img}`, alt="")
                if item.title
                    h3.how-to__item-title= item.title
                if item.descr
                    p.how-to__item-descr= item.descr
                if item.btns
                    each btn in item.btns 
                        +button(btn.modificator, btn.text)
